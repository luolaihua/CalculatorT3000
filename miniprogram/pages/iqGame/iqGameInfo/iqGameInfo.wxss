/* miniprogram/pages/iqGame/iqGameInfo/iqGameInfo.wxss */
page {
  width: 100%;
  background-color: #efefef;
}

.container {
  width: 100%;
  margin-bottom: 10px;
}

.modules_icon_box2 {
  height: 60px;
  width: 60px;
}

.modules_icon2 {
  border-radius: 10%;
  width: 30px;
  height: 30px;
  margin: 15px;
}

.modules_box {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: calc(100% - 20px);
  height: 60px;
  margin-top: 10px;
  margin-left: 10px;
  margin-right: 10px;
  background-color: #ffffff;
  border-radius: 6px;
  border: 1px solid transparent;
  box-sizing: border-box;
}

.modules_icon_box {
  height: 60px;
  width: 60px;
}

.modules_icon {
  width: 20px;
  height: 20px;
  margin: 20px;
}

.modules_title_box {

  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 60px;
  line-height: 60px;
  width: calc(100% - 120px);
  font-size: 14px;
  color: #7a7a7a;
}

.modules_switch_box {
  display: flex;
  height: 60px;
  width: 40px;
  align-items: center;
  justify-content: center;
}

.modules_text_box {
  display: flex;
  height: 60px;
  margin-right: 20rpx;
  align-items: center;
  justify-content: center;
}

.navigator-hover {
  border: 1px solid #007aff;
  box-sizing: border-box;
}

.modules_button {
  width: 40px !important;
  height: 20px !important;
}

.wx-switch-input {
  width: 40px !important;
  height: 20px !important;
}

.wx-switch-input::before {
  width: 38px !important;
  height: 18px !important;
}

.wx-switch-input::after {
  width: 18px !important;
  height: 18px !important;
}

.slider-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: calc(100% - 20px);
}

.slider-title {
  font-size: 14px;
  color: #7a7a7a;

}

.slider-view {
  height: 25px;

  width: 100%;
}

.slider-view slider {
  margin-left: 0;
}